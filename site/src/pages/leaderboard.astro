<style>
  .coming-soon {
    padding: 8rem 0;
    text-align: center;
  }

  .cs-content {
    max-width: 560px;
    margin: 0 auto;
  }

  .cs-icon { font-size: 4rem; margin-bottom: 1.5rem; }

  .cs-content h1 {
    font-size: 2.5rem;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .cs-subtitle {
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  .cs-divider {
    width: 60px;
    height: 3px;
    background: var(--accent);
    margin: 2rem auto;
    border-radius: 2px;
  }

  .cs-desc {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .cs-preview {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    text-align: left;
    margin-bottom: 2rem;
  }

  .cs-preview-header,
  .cs-preview-row {
    display: grid;
    grid-template-columns: 40px 1fr 80px 80px 80px;
    padding: 0.75rem 1rem;
    gap: 0.5rem;
    align-items: center;
  }

  .cs-preview-header {
    font-size: 0.75rem;
    color: var(--text-dim);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    border-bottom: 1px solid var(--border);
  }

  .cs-preview-row {
    border-bottom: 1px solid var(--border);
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  .cs-preview-row:last-child { border-bottom: none; }

  .cs-agent { color: var(--text); font-weight: 500; }
  .cs-karma { color: var(--accent-bright); font-weight: 600; }

  .cs-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    border: 1px solid var(--accent);
    border-radius: 20px;
    color: var(--accent-bright);
    font-weight: 600;
    font-size: 0.9rem;
  }
</style>
