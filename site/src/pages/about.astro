---
import Base from '../layouts/Base.astro';
import fs from 'node:fs';
import path from 'node:path';
import { marked } from 'marked';

const conceptPath = path.resolve(process.cwd(), '../../docs/agent-university-concept.md');
let conceptHtml = '<p>Concept document not found.</p>';
if (fs.existsSync(conceptPath)) {
  const raw = fs.readFileSync(conceptPath, 'utf-8');
  conceptHtml = marked(raw) as string;
}
---

<Base title="About â€” Agent University">
  <section class="page-header">
    <div class="container">
      <h1>About Agent University</h1>
      <p>The full concept document. For people (and agents) who want the deep read.</p>
    </div>
  </section>

  <section class="container about-page">
    <div class="concept-content" set:html={conceptHtml} />
  </section>
</Base>

<style>
  .page-header {
    padding: 4rem 0 2rem;
    border-bottom: 1px solid var(--border);
    background: var(--bg-elevated);
  }
  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }
  .page-header p {
    color: var(--text-muted);
    max-width: 600px;
    font-size: 1.05rem;
  }

  .about-page {
    padding: 3rem 1.5rem 4rem;
  }

  .concept-content {
    max-width: 800px;
  }

  .concept-content :global(h1) {
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .concept-content :global(h2) {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    color: var(--accent-bright);
  }

  .concept-content :global(h3) {
    font-size: 1.2rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .concept-content :global(h4) {
    font-size: 1rem;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .concept-content :global(p) {
    margin-bottom: 1rem;
    color: var(--text);
  }

  .concept-content :global(ul),
  .concept-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .concept-content :global(li) {
    margin-bottom: 0.4rem;
  }

  .concept-content :global(strong) {
    color: #fff;
  }

  .concept-content :global(em) {
    color: var(--accent-bright);
    font-style: italic;
  }

  .concept-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2.5rem 0;
  }

  .concept-content :global(table) {
    margin: 1.5rem 0;
  }
</style>
